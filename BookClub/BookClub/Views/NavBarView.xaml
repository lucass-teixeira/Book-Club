<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:BookClub.Models"
             x:Class="BookClub.Views.NavBarView">
    <Grid Padding="15,15" >
        <Label 
            Text="{Static icons:Icons.ArrowLeft}" 
            FontFamily="SecondIcons" FontSize="Title"
            VerticalOptions="Center" 
            HorizontalOptions="StartAndExpand" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Label.GestureRecognizers>
        </Label>
        <Label Text="{Binding Text}" FontAttributes="Bold" FontSize="Title" HorizontalOptions="Center"/>
    </Grid>
</ContentView>
