<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookClub.Pages.LoginPage"
             xmlns:views="clr-namespace:BookClub.Views"
             Shell.NavBarIsVisible="False"
             Title="LoginPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="primaryBtn" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="Subtitle"/>
                <Setter Property="FontFamily" Value="PromptMedium"/>
            </Style>


            <Style x:Key="borderEntry" TargetType="Border">
                <Setter Property="Stroke" Value="#D7D4EA"/>
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="BackgroundColor" Value="#EDF2F4"/>
                <Setter Property="Padding" Value="0,2"/>
                <Setter Property="Margin" Value="0,0,0,6"/>
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="4"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="commonStack" TargetType="StackLayout">
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Spacing" Value="12"/>
                <Setter Property="VerticalOptions" Value="StartAndExpand"/>
                <Setter Property="Grid.Row" Value="1"/>
            </Style>

            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="#EDF2F4"/>
                <Setter Property="Margin" Value="6,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <Grid RowDefinitions="auto,*,auto">
            <StackLayout Orientation="Vertical" VerticalOptions="Start">
                <views:NavBarView Text="Login"  />
                <Image Source="housylogo" HorizontalOptions="CenterAndExpand" IsVisible="False"/>
            </StackLayout>


            <VerticalStackLayout  Style="{StaticResource commonStack}" Grid.Row="1" 
                     x:Name="chooseSignInStack" VerticalOptions="CenterAndExpand">
                <Grid  RowDefinitions="*,*,*" RowSpacing="12" ColumnSpacing="14" Margin="10,0" >
                    <Button Text="Sign in with email" Style="{StaticResource primaryBtn}"
                            Command="{Binding ChooseEmailCommand}"
                            VerticalOptions="EndAndExpand" />


                    <Frame Padding="6" Grid.Row="1">
                        <Grid>
                            <Image HorizontalOptions="Start" HeightRequest="30" Source="data:image/png;base64," />
                            <Label Margin="10,0" FontFamily="PromptMedium" Text="Sign In with Google" VerticalOptions="Center" HorizontalOptions="Center"/>
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="2" Padding="6">
                        <Grid>
                            <Image HorizontalOptions="Start" HeightRequest="30" Source="https://cdn-icons-png.flaticon.com/512/145/145802.png" />
                            <Label Margin="10,0" FontFamily="PromptMedium" Text="Sign In with Facebook" VerticalOptions="Center" HorizontalOptions="Center"/>
                        </Grid>
                    </Frame>
                </Grid>
            </VerticalStackLayout>

            <VerticalStackLayout IsVisible="False" Grid.Row="1" Padding="15" Spacing="10" VerticalOptions="Center" x:Name="chooseEmailStack" >
                <VerticalStackLayout IsVisible="True">

                    <Label Text="Enter your email" HorizontalOptions="Center" Opacity=".6" Margin="6"/>
                    <Border  Style="{StaticResource borderEntry}">
                        <Entry Placeholder="Email" Keyboard="Email" Text="{Binding User.Email}"/>
                    </Border>
                </VerticalStackLayout>
                <!--IsVisible="{Binding IsPassword}"-->
                <VerticalStackLayout IsVisible="True">
                    <Label Text="Enter your password" HorizontalOptions="Center" Opacity=".6" Margin="6" IsVisible="False"/>
                    <Border Style="{StaticResource borderEntry}">
                        <Entry Placeholder="Password" IsPassword="True" Text="{Binding User.Password}"/>
                    </Border>
                </VerticalStackLayout>
                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" Padding="0">
                    <HorizontalStackLayout >
                        <CheckBox IsChecked="{Binding KeepConnected}"/>
                        <Label Text="Remember me" VerticalOptions="Center" FontSize="Small" Margin="2"/>
                        <!--<Switch IsToggled="{Binding KeepConnected}"/>-->
                    </HorizontalStackLayout>
                    <Label Text="Forgot password?" VerticalOptions="Center" HorizontalOptions="EndAndExpand" HorizontalTextAlignment="End" TextDecorations="Underline" Margin="2"/>
                </StackLayout>

                <Button Text="Sign In" Style="{StaticResource primaryBtn}"
                    BackgroundColor="#19CDAD" Margin="0,15" 
                    Command="{Binding LoginCommand}"/>

                <Grid Padding="0,15" ColumnDefinitions="*,auto,*" ColumnSpacing="5" IsVisible="False">
                    <BoxView BackgroundColor="#f6f6fb" HeightRequest=".4" Opacity=".5"  HorizontalOptions="Fill"/>
                    <Label Text="or" HorizontalOptions="Center" Grid.Column="1" VerticalOptions="EndAndExpand" FontSize="Small"  Opacity=".5"/>
                    <BoxView BackgroundColor="#f6f6fb" Grid.Column="2"  HeightRequest=".4" Opacity=".5" HorizontalOptions="FillAndExpand"/>

                </Grid>
                <Grid IsVisible="False" ColumnDefinitions="*,*" RowSpacing="12" ColumnSpacing="14" Margin="0,0" >
                    <Frame Padding="6" HorizontalOptions="FillAndExpand">
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Image HorizontalOptions="Center" Source="data:image/png;base64," HeightRequest="40"/>
                        </HorizontalStackLayout>
                    </Frame>
                    <Frame Grid.Column="1" Padding="6" HorizontalOptions="FillAndExpand">
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Image Source="https://cdn-icons-png.flaticon.com/512/145/145802.png" HeightRequest="40" />
                        </HorizontalStackLayout>
                    </Frame>

                </Grid>
            </VerticalStackLayout>

            <StackLayout Grid.Row="2" IsVisible="False">

                <Label HorizontalOptions="Center" Margin="15" >
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Not a member yet? " FontAttributes="None" TextColor="#AA000000"/>
                            <Span Text="SignUp" FontAttributes="Bold" TextColor="#19CDAD"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToSignUpPageCommand}"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>
            <BoxView BackgroundColor="#A0000000" Grid.Row="0" Grid.RowSpan="3"
                     HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                     IsVisible="{Binding IsBusy}"/>
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"  Color="#19CDAD"
                         WidthRequest="70" HeightRequest="70" 
                         Grid.RowSpan="3" HorizontalOptions="Center" VerticalOptions="Center"
                         />

            <!--<views:LoadingView Grid.RowSpan="3" IsVisible="{Binding IsBusy}"/>-->

        </Grid>
    </ScrollView>
</ContentPage>