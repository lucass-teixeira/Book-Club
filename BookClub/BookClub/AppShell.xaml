<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookClub.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookClub"
    xmlns:pages="clr-namespace:BookClub.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:OnboardingPage}"
        Route="OnboardingPage" />

    <ShellItem Route="LoginPage" Shell.NavBarIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate pages:LoginPage}"
                      Route="LoginPage"
                      Shell.NavBarIsVisible="False"/>
    </ShellItem>

    <TabBar>
        <!--<ShellContent
            Title="Login"
            Icon="dotnet_bot.svg"
            ContentTemplate="{DataTemplate pages:LoginPage}"
            Route="Login"
            Shell.NavBarIsVisible="False"/>-->

        <ShellContent
            Title="Home"
            Icon="home.svg"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Route="HomePage"
            Shell.NavBarIsVisible="False"/>

        <ShellContent
            Title="Account"
            Icon="user.svg"
            ContentTemplate="{DataTemplate pages:ProfilePage}"
            Route="PerfilPage"
            Shell.NavBarIsVisible="False"/>

    </TabBar>
</Shell>
